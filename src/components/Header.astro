---
import Avatar from "@components/ui/Avatar.astro";
let isInProject = false;
let isAncudPath = false;
import { FaTable } from "react-icons/fa6";
import { FaBriefcase, FaUser } from "react-icons/fa";

const url = Astro.url;
//know last url path
const lastUrlPath = url.toString().split("/").pop();
//set booleans
lastUrlPath === "proyects" ? (isInProject = true) : (isAncudPath = true);
---

<nav class="bg-[#2D2D2D] shadow-lg mb-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">
      <div class="flex items-center">
        <span class="w-6 text-[#B19CD9] mr-2 text-2xl"><FaTable /></span>
        <span class="text-2xl font-bold text-[#B19CD9]">Nero Task Table</span>
      </div>
      <div class="flex items-center space-x-4">
        <a
          class={`flex items-center px-3 py-2 text-[#FFFFFF] hover:text-[#D8B5FF] hover:bg-[#ffffff] transition-colors duration-200 ${isInProject ? "bg-[#B19CD9] bg-opacity-50" : ""} rounded-md`}
          href="/proyects"
        >
          <span class="mr-2 h-4 w-4"><FaBriefcase /></span>
          Proyectos
        </a>
        <a
          class={`flex items-center px-3 py-2 text-[#FFFFFF] hover:text-[#D8B5FF] hover:bg-[#ffffff]  transition-colors duration-200 ${isAncudPath ? "bg-[#B19CD9] bg-opacity-50" : ""} rounded-md`}
          href="/ancud"
        >
          <span class="mr-2 h-4 w-4"><FaUser /></span>
          Perfil
        </a>
        <Avatar />
      </div>
    </div>
  </div>
</nav>
